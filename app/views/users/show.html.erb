<div class="container">
	<div class="row">
		<%= render 'users/sidebar', user:@user, book:@book %>

		<div class="col-md-8" >

			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}"	 %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>


	</div>
</div>
