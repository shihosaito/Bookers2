<div class="container">
  <div class="row">
    <h2>User info</h2>

    <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

    <%= form_for@user do |f| %>

      <div class="field">
      <label>Name</label>
        <p><%= f.text_field :name, class: "name" %></p>
      </div>
      <label>Image</label>
        <p><%= f.attachment_field :profile_image, class: "user_image" %></p>
      <label>Introduction</label>
      <p><%= f.text_area :introduction, class: "introduction" %></p>

      <div class="actions">
        <%= f.submit "update user" %>
      </div>

    <% end %>
  </div>
</div>