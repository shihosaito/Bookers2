<div class="container">
	<div class="row">
		<%= render 'users/sidebar', user:@user, book:@book %>

		<div class="col-md-8" >

			<% if @book.errors.any? %>
			    <%= @book.errors.count %>件のエラーが発生しました
			    <% @book.errors.full_messages.each do |message| %>
			        <%= message %>
			    <% end %>
			<% end %>
			<div class="flash">
				<%= flash[:notice] %>
			</div>

			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>


	</div>
</div>