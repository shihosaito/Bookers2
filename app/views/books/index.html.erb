<div class="container">
	<div class="row">
		<%= render 'users/sidebar', user:@user, book:@book %>

		<div class="col-md-8" >

			<h1>Books</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<% @books.each do |book| %>
				<tr>
					<!-- <td><%#= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class: "user_image" %></td> -->
					<td><%= link_to user_path(book.user) do %>
					<%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class: "user_image" %>
					<% end %>
					</td>
					<td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</table>

		</div>

	</div>
</div>