					<td><%= link_to 'destroy', book_path(@books.id), method: :delete, class: "destroy_book_#{@books.id}" %></td>
				</tr>

				<% else %>

				  <thead>
						<tr>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tr>
						<td><%= @books.title %></td>
						<td><%= @books.body %></td>
					</tr>
				<% end %>

			</table>

		</div>

	</div>
</div>