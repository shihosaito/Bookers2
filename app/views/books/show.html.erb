<div class="container">
	<div class="row">
		<%= render 'users/sidebar', user:@user, book:@book %>

		<div class="col-md-8" >

			<h1>Book detail</h1>
			<table class="table">

			  <% if @user == current_user %>
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tr>
					<td></td>
					<td><%= @books.title %></td>
					<td><%= @books.body %></td>
					<td><%= link_to 'edit', edit_book_path(@books.id), class: "edit_book_#{@books.id}" %>
