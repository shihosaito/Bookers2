<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Bookers</a>
          </div>

          <div class="collapse navbar-collapse navbar-right" id="navbarEexample">
            <% if user_signed_in? %>

              <ul class="nav navbar-nav">
                <li><%= link_to 'Home', user_path(current_user.id), class: 'home' %></li>
                <li><%= link_to 'User', users_path, class: "users" %></li>
                <li><%= link_to 'Book', books_path , class: "books"  %></li>
                <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'logout' %></li>
              </ul>

            <% else %>

              <ul class="nav navbar-nav">
                <li class="active"><%= link_to 'Home', root_path, class: 'home' %></li>
                <li><%= link_to 'About', about_path, class: 'about' %></li>
                <li><%= link_to 'Sign up', new_user_registration_path, class: "sign_up"  %></li>
                <li><%= link_to 'Log in', new_user_session_path, class: 'sign_in' %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <div class="container">
      <% if notice %>
        　　<p class="alert alert-notice"><%= notice %></p>
        <% end %>
        <% if alert %>
           <p class="alert alert-error"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
